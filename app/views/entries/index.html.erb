<p id="notice"><%= notice %></p>

<table class="table table-bordered table-striped">
  <thead class="thead thead-dark" >
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.first_name %></td>
        <td><%= entry.last_name %></td>
        <td><%= entry.email %></td>
        <td><%= entry.phone_number %></td>
        <td><%= entry.address %></td>
        <td><%= entry.user_id%></td>
        <td><%= link_to 'Show', entry, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path, class:"btn btn-primary"%>
